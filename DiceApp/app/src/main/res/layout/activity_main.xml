<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_aquamarine"
    tools:context=".MainActivity">

<ImageView
    android:id="@+id/dice_one"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="@string/str_image_desc"
    android:layout_centerInParent="true"
    android:layout_alignParentLeft="true"
    android:layout_marginStart="@dimen/margin_eight"
    android:src="@drawable/dice_empty"
    tools:src="@drawable/dice5"
    />

    <ImageView
        android:id="@+id/dice_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/str_image_desc"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/margin_eight"
        android:src="@drawable/dice_empty"
        tools:src="@drawable/dice2"
        />

    <Button
        android:id="@+id/btn_roll_dice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_eight"
        android:text="@string/str_roll"
        android:backgroundTint="@color/color_button"
        />

</RelativeLayout>