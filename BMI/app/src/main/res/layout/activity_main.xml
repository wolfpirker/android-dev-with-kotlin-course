<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center|top"
    android:weightSum="8">

        <EditText
            android:id="@+id/weight_edit_text"
            android:layout_width="220dp"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/margin_sixteen"
            android:layout_weight="1"
            android:hint="@string/edit_text_hint_weight"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            android:padding="@dimen/padding_eight"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/length_edit_text"
            android:layout_width="220dp"
            android:layout_height="38dp"
            android:layout_margin="@dimen/margin_sixteen"
            android:layout_weight="1"
            android:hint="@string/edit_text_hint_length"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            android:padding="@dimen/padding_eight"
            android:textAlignment="center" />

        <Button
            android:id="@+id/button_calculate"
            android:layout_width="220dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_eight"
            android:text="@string/calculate"
            />

        <TextView
            android:id="@+id/textview_bmi_value"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:fontFamily="@font/arimo"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_20" />
    <ImageView
        android:id="@+id/image_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/margin_sixteen"
        android:contentDescription="@string/str_body_description_healthy"
        app:srcCompat="@drawable/ic_body_healthy" />

    </LinearLayout>